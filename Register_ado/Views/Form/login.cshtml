@model Register_ado.Models.Form
<h1 class="text-info text-center fw-bold">Login</h1>
<br />
<br />
<br />
<form method="post" id="form">
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="Email"></label>
        </div>
        <div class="col-4">
            <input id="username" asp-for="Email" class="form-control btn-outline-info" />
        </div>
        <p class="text-danger text-center" id="uname"></p>
    </div>
    </br>
    <div class="form-group row">
        <div class="col-4">
            <label  asp-for="Password"></label>
        </div>
        <div class="col-4">
            <input id="pass" asp-for="Password" class="form-control btn-outline-info" />
        </div>
        <p class="text-danger text-center" id="upass"></p>
    </div>
    <br />
    <button class="btn btn-outline-info text-center" id="submit" onclick="login()" type="submit">Login</button>
    <asp:Label ID="lblmessage" runat="server" Font-Bold="True" ForeColor="#FF3300"></asp:Label><br />
</form>
@section Scripts{
    <script>
        function login() {
            let username = $("#username").val();
            let password = $("#pass").val();


            if (username == "") {
                $("#uname").show();
                $("#uname").html("<h6>Enter name</h6>"); // setting html
                // alert("Enter Username");
                event.preventDefault();

            }
            else {
                $("#uname").hide();
            }

            if (password == "") {
                $("#upass").show();
                $("#upass").html("<h6>Enter name</h6>"); // setting html
                // alert("Enter Password");
                event.preventDefault();

            }
            else {
                $("#upass").hide();
            }

        }
    </script>
   
}