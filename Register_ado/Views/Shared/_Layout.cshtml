<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Register_ado</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/r/dt/jq-2.1.4,jszip-2.5.0,pdfmake-0.1.18,dt-1.10.9,af-2.0.0,b-1.0.3,b-colvis-1.0.3,b-html5-1.0.3,b-print-1.0.3,se-1.0.1/datatables.min.css">
    <link href="~/lib/Bootstrap-Multiselect/dist/css/bootstrap-multiselect.css" rel="stylesheet" />  
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Register_ado.styles.css" asp-append-version="true" />

  
 <style>
     .navbar
         {
            background-color: darksalmon;
            height:70px;
            border-radius: 40px 10px;
        }
        .bt{
            border-radius: 40px;
        }
 </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
   
                <button class="asd navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                 <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                            <li>
                            <a class="nav-link text-white" asp-area="" asp-controller="Form" asp-action="Login">Login</a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        </ul>
                   </div>
                    @if(User.Identity.IsAuthenticated==true)
                    {                    
                                                                 
                        @User.Claims.FirstOrDefault(c=>c.Type=="department").Value
                        <br />
                        @User.Claims.FirstOrDefault(c=>c.Type=="designation").Value
                        <br />
                        
                        <form method="post" asp-controller="Form" asp-action="Logout">
                            <button class="bt btn btn-lg btn-info btn-block offset-1">Logout</button>
                        </form>
                    }
                    else
                    {
                    <a class="nav-link text-white" asp-area="" asp-controller="Form" asp-action="Create">Form</a>
                    }
                </div>
         
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Register_ado - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src=" \js/multiselect-dropdown.js"></script>

    <link href="~/lib/bootstrap-multiselect/dist/css/bootstrap-multiselect.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-multiselect/dist/css/bootstrap-multiselect.min.css" rel="stylesheet" />
@*    <link href="~/lib/bootstrap-multiselect/dist/less/bootstrap-multiselect.less" rel="stylesheet" />
*@    <script src="~/lib/Bootstrap-Multiselect/dist/js/bootstrap-multiselect.js"></script>
    @* <script src="~/lib/bootstrap-multiselect/js/bootstrap-multiselect.min.js"></script>*@    
    <script src="~/js/html2canvas.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>